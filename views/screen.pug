extends layout

block content
    div(class='container-fluid')
        div()
            form(method='post' enctype='multipart/form-data' action='/screen/on' class='d-grid')
                button(type='submit' class='btn btn-success bi-tv-fill')  #{__('SwitchOnScreen')}
        div(class='pt-2')
            form(method='post' enctype='multipart/form-data' action='/screen/off' class='d-grid')
                button(type='submit' class='btn btn-warning bi-tv')  #{__('SwitchOffScreen')}

