extends layout

block content
    div(class='container-fluid')
        div()
            form(method='post' enctype='multipart/form-data' action='/screen/on')
                button(type='submit' class='btn btn-success btn-block') Bildschirm einschalten
        div(class='top-pad')
            form(method='post' enctype='multipart/form-data' action='/screen/off')
                button(type='submit' class='btn btn-warning btn-block') Bildschirm ausschalten
        hr
        form(method='post' enctype='multipart/form-data' action='/screen/schedule')
            div(class='input-group')
                div(class='input-group-prepend')
                    div(class='input-group-text') Startzeit
                input(type='time' class='form-control' id='fstime' name='fstime' required)
            div(class='input-group top-pad')
                div(class='input-group-prepend')
                    div(class='input-group-text') Endzeit
                input(type='time' class='form-control' id='fetime' name='fetime' required)
            div(class='top-pad')
                button(type='submit' class='btn btn-primary btn-block' id='screen_schedule') Zeitplan festlegen
        hr
        form(method='post' enctype='multipart/form-data' action='/screen/noschedule' id='screen_noschedule')
